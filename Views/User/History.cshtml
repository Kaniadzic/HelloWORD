@model List<HelloWORD.Models.Entity.UserHistory>

@{
    ViewBag.Title = "Historia nauki";
}

<main>
    <div class="d-flex my-2 my-md-3 justify-content-center">
        <p class="h4 text-warning text-center">@ViewBag.Alert</p>
    </div>

    <div class="d-flex flex-column flex-md-row justify-content-center align-items-center justify-content-md-around">
        <div class="d-flex flex-column align-items-center justify-content-center">
            <div>
                <span>Filtr kategorii</span>
                <button class="btn btn-contact btn-category" id="quizA">A</button>
                <button class="btn btn-contact btn-category" id="quizB">B</button>
                <button class="btn btn-contact btn-category" id="quizC">C</button>
                <button class="btn btn-contact btn-category" id="quizD">D</button>
                <button class="btn btn-contact btn-category" id="quizT">T</button>
                <button class="btn btn-contact btn-category btn-category-k" id="quizK">Kodeks</button>
            </div>
            <table class="table table-striped table-bordered user-data-table mt-2">
                <thead>
                    <tr>
                        <th colspan="3">Oto twoja historia quizów</th>                
                    </tr>
                    <tr>
                        <th>
                            Data
                        </th>
                        <th>
                            Kategoria
                        </th>
                        <th>
                            Punkty
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            if (Model.ElementAt(i).Type == "Quiz")
                            {
                                <tr>
                                    <td scope="col">
                                        @Model.ElementAt(i).Date.Year-@Model.ElementAt(i).Date.Month-@Model.ElementAt(i).Date.Day
                                    </td>
                                    <td scope="col">
                                        @Model.ElementAt(i).Category
                                    </td>
                                    <td scope="col">
                                        @Model.ElementAt(i).Score/40
                                    </td>
                                </tr>
                            }
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">
                                <p class="small text-center">Nie ukończono jeszcze żadnego quizu! Skorzystaj z opcji generowania pytań na pasku menu aby rozpocząć quiz.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex flex-column align-items-center justify-content-center">
            <div>
                <span>Filtr kategorii</span>
                <button class="btn btn-contact btn-category" id="examA">A</button>
                <button class="btn btn-contact btn-category" id="examB">B</button>
                <button class="btn btn-contact btn-category" id="examC">C</button>
                <button class="btn btn-contact btn-category" id="examD">D</button>
                <button class="btn btn-contact btn-category" id="examT">T</button>
            </div>
            <table class="table table-striped table-bordered mt-2 user-data-table">
                <thead>
                    <tr>
                        <th colspan="4">Oto twoja historia egzaminów</th>
                    </tr>
                    <tr>
                        <th>
                            Data
                        </th>
                        <th>
                            Kategoria
                        </th>
                        <th>
                            Punkty
                        </th>
                        <th>
                            Zdano
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            if (Model.ElementAt(i).Type == "Exam")
                            {
                                <tr>
                                    <td scope="col">
                                        @Model.ElementAt(i).Date.Year-@Model.ElementAt(i).Date.Month-@Model.ElementAt(i).Date.Day
                                    </td>
                                    <td scope="col">
                                        @Model.ElementAt(i).Category
                                    </td>
                                    <td scope="col">
                                        @Model.ElementAt(i).Score
                                    </td>
                                    <td scope="col">
                                        @if (@Model.ElementAt(i).Passed)
                                        {
                                            <span class="answer-correct">Zdany</span>
                                        }
                                        else
                                        {
                                            <span class="answer-incorrect">Nie zdany</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">
                                <p class="text-center small">Nie ukończono jeszcze żadnego egzaminu! Możesz to zrobić @Html.ActionLink("tutaj", "QuizInfo", "Home", new { }, new { @class = "contact-link" })</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>
