<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HelloWORD</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/main.css")
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-lg">
        <div>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#main-menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="main-menu">
                <ul class="navbar-nav">
                    <li class="mx-3 my-2 menu-item nav-item">@Html.ActionLink("START", "Index", "Home")</li>

                    <li class="mx-3 menu-item nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-expanded="false" id="submenu-questions1"> 1 PYTANIE </a>
                        <div class="dropdown-menu" aria-labelledby="submenu-questions1">
                            @Html.ActionLink("Kat. A", "Quiz", "Quiz", new { category = "A", questions = 1}, new { @class = "dropdown-item"})
                            @Html.ActionLink("Kat. B", "Quiz", "Quiz", new { category = "B", questions = 1 }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. C", "Quiz", "Quiz", new { category = "C", questions = 1 }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. D", "Quiz", "Quiz", new { category = "D", questions = 1 }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. T", "Quiz", "Quiz", new { category = "T", questions = 1 }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kodeks", "Quiz", "Quiz", new { category = "Kodeks", questions = 1 }, new { @class = "dropdown-item" })
                        </div>
                    </li>

                    <li class="mx-3 menu-item nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-expanded="false" id="submenu-questions40"> 40 PYTAŃ </a>
                        <div class="dropdown-menu" aria-labelledby="submenu-questions40">
                            @Html.ActionLink("Kat. A", "Quiz", "Quiz", new { category = "A", questions = 40 }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. B", "Quiz", "Quiz", new { category = "B", questions = 40 }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. C", "Quiz", "Quiz", new { category = "C", questions = 40 }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. D", "Quiz", "Quiz", new { category = "D", questions = 40 }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. T", "Quiz", "Quiz", new { category = "T", questions = 40 }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kodeks", "Quiz", "Quiz", new { category = "Kodeks", questions = 40 }, new { @class = "dropdown-item" })
                        </div>
                    </li>

                    <li class="mx-3 menu-item nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-expanded="false" id="submenu-exam"> EGZAMIN </a>
                        <div class="dropdown-menu" aria-labelledby="submenu-exam">
                            @Html.ActionLink("Kat. A", "Start", "Exam", new { category = "A" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. B", "Start", "Exam", new { category = "B" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. C", "Start", "Exam", new { category = "C" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. D", "Start", "Exam", new { category = "D" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. T", "Start", "Exam", new { category = "T" }, new { @class = "dropdown-item" })
                        </div>
                    </li>

                    <li class="mx-3 nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-expanded="false" id="submenu-learn"> NAUKA </a>
                        <div class="dropdown-menu" aria-labelledby="submenu-learn">                        
                            @Html.ActionLink("Kat. A", "Learn", "Study", new { category = "A" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. B", "Learn", "Study", new { category = "B" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. C", "Learn", "Study", new { category = "C" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. D", "Learn", "Study", new { category = "D" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kat. T", "Learn", "Study", new { category = "T" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Kodeks", "Learn", "Study", new { category = "Kodeks" }, new { @class = "dropdown-item" })
                        </div>
                    </li>

                    <li class="mx-3  my-2 menu-item nav-item">@Html.ActionLink("INFORMACJE", "About", "Home")</li>
                    <li class="mx-3  my-2 menu-item nav-item">@Html.ActionLink("KONTAKT", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="body-content">
        @RenderBody()  
    </div>
    <footer class="d-flex flex-column main-footer mt-3">
        <span class="mx-3 mb-3 separator"></span>
        <p class="text-center text-muted ml-3">2020 - @DateTime.Now.Year &copy; Szymon Kania, Uniwersytet Ekonomiczny w Katowicach</p>
        <p class="text-center text-muted mr-3">@Html.ActionLink("Kontakt", "Contact", "Home", new { @class = "contact-link" }) | @Html.ActionLink("Regulamin", "ToS", "Home", new { area = "Home" }, new { @class = "contact-link" }) | <a class="contact-link" href="#">Facebook</a></p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
